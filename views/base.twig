 <!-- HEADER -->
<header id="navbar" role="banner">
  <nav role="navigation" class="navbar navbar-default navbar-fixed-top" data-ng-controller="NavCtrl">
    <div class="container-fluid">
        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <button type="button" class="navbar-toggle" data-ng-init="collapsed = true" data-ng-click="collapsed = !collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

      <div class="navbar-header">
      	<a class="navbar-btn" href="{{home_url}}" title="Home">
          <img src="{{theme_url}}/images/sil_logo_tm_combo.jpg" alt="Home">
        </a>
      </div>

			<div class="collapse navbar-collapse" data-collapse="collapsed">
				<div id="search-box" class="navbar-form navbar-right">
					{{function('get_search_form')}}
				</div>
				<div id="nav-list">
				<ul class="nav navbar-nav navbar-right">
					{% for item in menu.get_items %}
<!--							<li class="nav-main-item {{item.classes | join(' ')}}"><a class="nav-main-link" href="{{item.get_link}}">{{item.title}}</a></li> -->
						<li class="mc-{{item.title}}"><a href="{{item.get_link}}">{{item.title}}</a></li>
					{% endfor %}
				</ul>
				</div>
			</div>
		</div>
  </nav>
</header>

<header id="page-site-name">
  <div class="container">
    <h1 class="navbar-text page-header">{{site.name}}</h1>
  </div>
</header>
{% block breadcrumbs %}
  {% include "breadcrumbs.twig" %}
{% endblock %}
{% block content %}
{% endblock %}

<footer class="footer">
	<footer class="footer-top">
	{% include 'footer.twig' %}
	{{ function('wp_footer') }}
	</footer>
	<footer class="footer-bottom">
		<div class="container">
			<div class="row">
				<nav class="col-xs-12 col-sm-6">
					<p>Copyright Â© {{ "now"|date("Y") }}&nbsp;&nbsp;<a href="http://www.sil.org/" title="" class="active">SIL International {{qux}}</a></p>
				</nav>
				<nav class="col-xs-12 col-sm-6">
					<ul class="nav nav-horizontal">
						<li class="first leaf active"><a href="/terms-of-use" title="" class="active">Terms of Use</a></li>
						<li class="last leaf active"><a href="/privacy-policy" title="" class="active">Privacy Policy</a></li>
					</ul>
				</nav>
			</div>
		</div>
	</footer>
</footer>
{% if site.id == 1 and post.title == "Products" %}
	<!--
		ONLY RENDER THIS NEXT SCRIPT FOR http://software.sil.org/products/, NOWHERE ELSE!!!!
		Script is here so that $() = jQuery() and because all other content is now rendered.
		Adds target="_blank" attribute to all Markdown-generated links on all Product lists.
	//-->
	<script type="text/javascript">
		(function($){
			$(document).ready(function(){
				$('.products + ul a, a.nrsi').attr('target','_blank');
			});
		})(jQuery);
	</script>
{% elseif site.id == 1 and (post.title == "Contact NRSI" or post.title == "Contact Language Technology") %}
	<!--
		ONLY RENDER THIS NEXT SCRIPT FOR PRODUCTS CONTACT FORM PAGES, NOWHERE ELSE!!!
		Appends "Return to Products Page" link to "message successfully sent" output.
	//-->
	<script type="text/javascript">
		(function($){
			$(document).ready(function(){
				var back2prodspg = ' <a href="/products/">Return to Products Page &raquo;</a>';
				$('.wpcf7-response-output.wpcf7-mail-sent-ok').append(back2prodspg);
			});
		})(jQuery);
	</script>
{% endif %}
</body>
</html>
