{% extends "base.twig" %}

{% block breadcrumbs %}
<header id="page-breadcrumbs">
  <div class="container">
    <h2 class="page-header">
      <ol class="breadcrumb">
          <li><a href="{{home_url}}">Home</a></li>
          <li><a href=""><span class="last-crumb">{{wp_title}}</span></a></li>
      </ol>
    </h2>
  </div>
</header>
{% endblock %}

{% block content %}

<section id="content_primary">

  <div class="container">
  	<div class="row">

  		<div class="col-md-8 col-sm-8">
    		<section class="article-content">
          {% for post in posts %}
          	{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
          {% endfor %}
        </section>
      </div>

      {% include "sidebar.twig" %}

    </div>
  </div>

</section>

{% endblock %}
